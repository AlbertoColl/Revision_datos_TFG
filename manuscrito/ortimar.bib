   pages = {255},
   publisher = {Université Côte d'Azur},
   title = {Evolutionary conservation and roles of ROS signalling in the initiation of regeneration. Insight from the cnidarian Nematostella vectensis and the annelid Platynereis dumerilii},
   url = {https://theses.hal.science/tel-04836938 https://theses.hal.science/tel-04836938/document},
