   issn = {0147-6513},
   issue = {2},
   journal = {Ecotoxicology and Environmental Safety},
   keywords = {Antioxidant defense systems,Aquatic organisms,Environmental pollutants,Free radicals,Lipid peroxidation,Oxidative DNA damage,Oxidative stress,Protein oxidation,Reactive oxygen species,Transition metals,Xenobiotics},
