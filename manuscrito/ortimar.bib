@article{Utrilla2019,
   abstract = {Anemonia sulcata (Pennant, 1777) is a common shallow water cnidarian from rocky platform and boulder beaches in southern Spain, where it is a popular seafood item with an increasing fishery. To aid in the management of a sustainable fishery, a study on the reproduction of A. sulcata in the littoral of Malaga (southern Spain) was performed from November 2014 to September 2015, using histological methods. A total of 123 specimens were examined, with a size range (as diameter of the pedal disc) from 1.1 to 48.2 mm. The sex ratio was significantly biased to females, with 1.7 females: 1 male (χ2 = 4.45, p < 0.01). The spermatozoids and oocytes arise from the endodermal cells. The mature oocytes receive nutritive filaments (trophonema) from the endoderm cells. There were zooxanthellae in the mesenteries, tentacles and also inside the oocytes. A gastrula was observed in one individual, as well as several planula larvae in different degree of development in others. Asexual reproduction by internal budding was observed in some individuals. The studied population showed an extended reproductive cycle with a peak of spawning in April. The size and weight of sexual maturity of the studied population were 21.5 mm and 16.5 g, respectively. A positive significant correlation was observed between size and weight of individuals. We suggest that the diameter of the pedal disc should be used as the legal parameter for the management of this fishery, as this measurement is easier to take by fishermen at sea than the weight, the current legal parameter.},
   author = {Olga Utrilla and Juan Diego Castro-Claros and Javier Urra and Francisco David Navas and Carmen Salas},
   doi = {10.1007/s00227-019-3558-5},
   issn = {14321793},
   issue = {8},
   journal = {Marine Biology},
   note = {<b>Highlights</b><br/><br/><i>A. sulcat</i>a habita en la zona intermareal y zona sublitoral poco profunda, hasta un max de unos 20 m pero siendo más abundante en los primeros 10. Amplia distribución por el mediterraneo y la costa atlantica de europa y sahra occidental.<br/><br/>Descripción de la pesquería y ciclo de vida general. Critica que los unicos estudios son de napoles hace mas de 30 años y se usan de base para regulacion. Menciona informe de Daza pero critica metodologia. Actualmente peso minimo de captura 15 g y veda de enero a febrero.<br/><br/>Escala de maduracion "gonadal", puedes usarla para tus muestras. Menciona tincniones hechas para cortes histologicos y para observacion de zooxantelas.<br/><br/>Localización de las gonadas en los dos primeros circulos de mesenterios incompletos, no se halló ninguna en los completos. Figuras muy muy muy interesantes y datos para comparar y discutir mis resultados. Pico de desove en abril.<br/><br/><i>A. sulcata </i>tiene fertilizacion externa pero se encontraron embriones y larvas planulas en el interior, lo que indica que la fecundacion interna es posible. Tambien encontraron gemas en el interior.<br/><br/>Mayor proporcion de hembras, distintas explicaciones. Primer registro de trofonema en la especie, una estructura unica de algunos actiniarios compuesto por un filamento de trofocitos que proveen de nutricion a las gonadas. U trofonema por cada ovocito, un trofonema por cada foliculo espermatico.<br/><br/>Mayor desarrollo gonadal en diciembre, pico de desove en abril. Proponen que la veda debería transponerse a marzo y abril. Primer registro de fertilizacion interna, no se puede considerar especie brooding porque no hay juveniles. Tambien las larvas pueden ser partenogeneticas. Filamentos penetrando los embriones indican algun tipo de nutricion materna. Primer registro de zooxantelas en ovocitos de la especie, prueba de transmision vertical de zooxantelas.<br/><br/>Proponen utilizar diametro del disco pedio en lugar de peso por ser mas facil de medir. Sesgo por contraccion del disco pedio ayuda a medidas de conservacion (los individuos contraidos son mas pequeños, la medida de referencia se hace con el disco relajado). Proponen talla minima de 21.5 mm de diametro.},
   title = {Reproduction of the anthozoan Anemonia sulcata (Pennant, 1777) in southern Spain: from asexual reproduction to putative maternal care},
   volume = {166},
   year = {2019}
}
@inbook{Bocharova2016,
   abstract = {The data on different modes of reproduction in sea anemones and other hexacorals are reviewed. There are colonial and solitary individuals, gonochoric and hermaphroditic organisms among them. Hexacorals can reproduce sexually in an ordinary way or by parthenogenesis. Asexual reproduction occurs in various forms. Specific features of different variants of sexual and asexual reproduction and their combinations in Hexacorallia populations from different habitats of the World Ocean are discussed.},
   author = {Ekaterina Bocharova},
   doi = {10.1007/978-3-319-31305-4_15},
   booktitle = {The Cnidaria, past, present and Future: The World of Medusa and her Sisters},
   note = {<b>Highlights</b><br/><br/>Las anémonas de mar presentan modalidades de reproducción muy diversas, que no siempre están presentes en todas las especies. <br/><br/><i>Anemonia</i> es un género de anémonas dioicas, que pueden reproducirse sexualmente con fecundación externa, o asexualmente mediante fisión longitudinal.<br/><br/>La fision longitudinal puede empezar por el disco pedio o por el disco oral según la especie (preguntar a Cristina o a Ana), y puede ser inducida en respuesta a condiciones ambientales adversas.<br/><br/>Los cnidarios no presentan gónadas verdaderas, sino cordones en el mesenterio donde se localizan las células germinales.<br/><br/>Otra información útil: se describe con mucho detalle la antomía de las anémonas. Varias figuras interesantes.},
   title = {Reproduction of sea anemones and other hexacorals},
   year = {2016}
}
@inbook{Casado-Ameza2016,
   abstract = {The aim of this chapter is to provide a general overview of the main ecological aspects of Anthozoan- Symbiodinium mutualisms in the Mediterranean Sea. There are reports of at least twelve species of symbiotic anthozans in the basin. These anthozoans establish symbiotic relations with Symbiodinium Temperate A and B2 (Symbiodinium psygmophilum), corresponding to the only two species of Symbiodinium described in the region. A synthesis of the trophic and biochemical aspects of the interaction between Symbiodinum and their cnidarian hosts is given to contribute to the understanding of the mechanisms that maintain this special association. Finally, current knowledge about the ecological importance of this interaction in engineering species is examined. This review is framed to highlight the ecological importance of this symbiotic relationship in ecosystem construction and maintenance on an enclosed, temperate marine basin.},
   author = {Pilar Casado-Amezúa and Alejandro Terrón-Sigler and Jorge H. Pinzón and Paola Furla and Didier Forcioli and Denis Allemand and Marta Ribes and Rafel Coma},
   doi = {10.1007/978-3-319-31305-4_24},
   booktitle = {The Cnidaria, past, present and Future: The World of Medusa and her Sisters},
   note = {<b>Highlights</b><br/><br/>La simbiosis entre antozoos y dinoflagelados tiene gran relevancia ecológica. Está muy poco estudiada en el Mar Mediterráneo, donde hay 12 especies diferentes de antozoos simbióticos. De estas especies, la mayoría son anémonas del complejo de especies <i>Anemonia sulcata-viridis</i>.<br/><br/>La simbiosis ofrece un aporte energético y de oxígeno a la anémona, mientras que las microalgas obtienen nutrientes que no conseguirían de otra forma en un entorno oligotrófico, y un ambiente seguro y estable para crecer.<br/><br/>La simbiosis también conlleva costes y presiones que han derivado en distintas adaptaciones: pigmentos y proteínas fluorescentes para protegerse de la radiación UV, mecanismos de captura y acumulación de bicarbonato para favorecer a la RuBisCo de las microalgas, fototaxias.<br/><br/>A. viridis tiene gran capacidad antioxidante, ya que la fotosíntesis de sus microalgas genera una hiperoxia en la cavidad gastrointestinal, que tiene como consecuencia una intensa producción de especies reactivas de oxígeno.<br/><br/>Sólo hay dos clados de Symbiodinium en las especies mediterráneas. Las especies Anemonia tienen todas el clado Templado A.<br/><br/>Relevancia de los mantos de anémonas en los ecosistemas costeros del Mediterráneo, importancia de la simbiosis A-S en estos ecosistemas.},
   title = {General ecological aspects of anthozoan- symbiodinium interactions in the mediterranean sea},
   year = {2016}
}
@misc{Lesser2006,
   abstract = {Oxidative stress-the production and accumulation of reduced oxygen intermediates such as superoxide radicals, singlet oxygen, hydrogen peroxide, and hydroxyl radicals-can damage lipids, proteins, and DNA. Many disease processes of clinical interest and the aging process involve oxidative stress in their underlying etiology. The production of reactive oxygen species is also prevalent in the world's oceans, and oxidative stress is an important component of the stress response in marine organisms exposed to a variety of insults as a result of changes in environmental conditions such as thermal stress, exposure to ultraviolet radiation, or exposure to pollution. As in the clinical setting, reactive oxygen species are also important signal transduction molecules and mediators of damage in cellular processes, such as apoptosis and cell necrosis, for marine organisms. This review brings together the voluminous literature on the biochemistry and physiology of oxidative stress from the clinical and plant physiology disciplines with the fast-increasing interest in oxidative stress in marine environments. Copyright © 2006 by Annual Reviews. All rights reserved.},
   author = {Michael P. Lesser},
   doi = {10.1146/annurev.physiol.68.040104.110001},
   issn = {00664278},
   journal = {Annual Review of Physiology},
   title = {Oxidative stress in marine environments: Biochemistry and physiological ecology},
   volume = {68},
   year = {2006}
}
@article{Parisi2020,
   abstract = {Anthozoa is the most specious class of the phylum Cnidaria that is phylogenetically basal within the Metazoa. It is an interesting group for studying the evolution of mutualisms and immunity, for despite their morphological simplicity, Anthozoans are unexpectedly immunologically complex, with large genomes and gene families similar to those of the Bilateria. Evidence indicates that the Anthozoan innate immune system is not only involved in the disruption of harmful microorganisms, but is also crucial in structuring tissue-associated microbial communities that are essential components of the cnidarian holobiont and useful to the animal’s health for several functions including metabolism, immune defense, development, and behavior. Here, we report on the current state of the art of Anthozoan immunity. Like other invertebrates, Anthozoans possess immune mechanisms based on self/non-self-recognition. Although lacking adaptive immunity, they use a diverse repertoire of immune receptor signaling pathways (PRRs) to recognize a broad array of conserved microorganism-associated molecular patterns (MAMP). The intracellular signaling cascades lead to gene transcription up to endpoints of release of molecules that kill the pathogens, defend the self by maintaining homeostasis, and modulate the wound repair process. The cells play a fundamental role in immunity, as they display phagocytic activities and secrete mucus, which acts as a physicochemical barrier preventing or slowing down the proliferation of potential invaders. Finally, we describe the current state of knowledge of some immune effectors in Anthozoan species, including the potential role of toxins and the inflammatory response in the Mediterranean Anthozoan Anemonia viridis following injection of various foreign particles differing in type and dimensions, including pathogenetic bacteria.},
   author = {Maria Giovanna Parisi and Daniela Parrinello and Loredana Stabili and Matteo Cammarata},
   doi = {10.3390/biology9090283},
   issn = {20797737},
   issue = {9},
   journal = {Biology},
   note = {A pesar de ser un grupo filogeneticamente basal, tienen una complejidad inmunológica sorprendente. El sistema inmunológico de cnidarios e encarga del reconocimiento de patogenos, establecimiento y regulacion de la simbiosis de zooaxnelas, y gestion de los microorganismos beneficiosos del mucus.<br/>Se basa compeltamente en el reconocimiento entre propio y ajeno, y se compone de 4 funciones principales: reconocimiento inmunologico por receptores de reconocimiento de patrones (PRRs), como TLR, NLR y lectinas; cascadas de señalizacion itnracelular (complejas y homologas a las de vertebrados) que conducen a la activacion de factores de transcipcion; expresion genica y traduccion proteica; y finalmente los efectores del sistema inmunologico, que incluyen moleculas con actividad antibacteriana, ROS, mecanismos antioxidantes y actividades celulares (fagocitosis, citotoxicidad, segregacion de AMP).<br/>Adicionalmente, cuentan con una barrera fisicoquimica en la cama de mucus que recubre su superficie, y que esta colonizada por multitud de microorganismos beneficiosos.<br/><br/>Aunque dependen principalmente de la inmunidad innata para defenderse, cada vez hay más evidencias que apuntan a que los cnidarios presentan mecanismos de memoria inmunologica mediada por receptores.},
   title = {Cnidarian immunity and the repertoire of defense mechanisms in anthozoans},
   volume = {9},
   year = {2020}
}
@article{Richier2003,
   abstract = {Many cnidarians, such as sea anemones, contain photosynthetic symbiotic dinoflagellates called zooxanthellae. During a light/dark cycle, the intratentacular O2 state changes in minutes from hypoxia to hyperoxia (3-fold normoxia). To understand the origin of the high tolerance to these unusual oxic conditions, we have characterized superoxide dismutases (SODs) from the three cellular compartments (ectoderm, endoderm and zooxanthellae) of the Mediterranean sea anemone Anemonia viridis. The lowest SOD activity was found in ectodermal cells while endodermal cells and zooxanthellae showed a higher SOD activity. Two, seven and six SOD activity bands were identified on native PAGE in ectoderm, endoderm and zooxanthellae, respectively. A CuZnSOD was identified in both ectodermal and endodermal tissues. MnSODs were detected in all compartments with two different subcellular localizations. One band displays a classical mitochondrial localization, the three others being extramitochondrial. FeSODs present in zooxanthellae also appeared in endodermal host tissue. The isoelectric points of all SODs were distributed between 4 and 5. For comparative study, a similar analysis was performed on the whole homogenate of a scleractinian coral Stylophora pistillata. These results are discussed in the context of tolerance to hyperoxia and to the transition from anoxia to hyperoxia. © 2003 Elsevier Science B.V. All rights reserved.},
   author = {Sophie Richier and Pierre Laurent Merle and Paola Furla and Delphine Pigozzi and François Sola and Denis Allemand},
   doi = {10.1016/S0304-4165(03)00049-7},
   issn = {03044165},
   issue = {1},
   journal = {Biochimica et Biophysica Acta - General Subjects},
   note = {<b>Highlights<br/></b><br/>Primera evidencia de transición circadiana hiperoxia-hipoxia en tejidos de la anémona, de aquí sale el dato de que alcanzó 3 veces la normoxia durante el día. Analizaron también la diversidad y distribución de las superóxido dismutasas en A. viridis. Encontraron que la epidermis o ectodermo solo presentaba la típica CuZn-SOD y una Mn-SOD, siendo la primera la mayoritaria y responsable del 66 % de la actividad SOD medida.<br/><br/>En el endodermo o gastrodermis, tejido donde se encuentran alojadas las zooxantelas, encontraron la CuZn-SOD (responsable del 87 % de la actividad), 4 Mn-SOD diferentes, y adicionalmente dos Fe-SOD distintas. Las zooxantelas presentas las SOD de hierro y manganeso, pero no la de cobre y zinc, tipica de animales.<br/><br/>Estos resultados sorprenden ya que las Fe-SOD son exclusivas de algas, plantas y protistas, por lo que su presencia en la gastrodermis es o una contaminación, o evidencia de transferencia de proteínas entre el simbionte y la anémona.<br/><br/>También explica la metodología para separar epidermis y gastrodermis, y para extraer las zooxantelas de la gastrodermis. Para asegurarse de que no había un gran grado de contaminación, midieron la clorofila a y actividad rubisco en los 3 extractos. Critica: ¿test estadistico para confirmar ausencia de contaminación?},
   title = {Characterization of superoxide dismutases in anoxia- and hyperoxia-tolerant symbiotic cnidarians},
   volume = {1621},
   year = {2003}
}
@techReport{DazaCordero2002,
   author = {J.L. Daza Cordero and F. del Castillo y Rey and I. Márquez Pascual},
   city = {Huelva},
   isbn = {84-8474-041-2},
   institution = {Junta de Andalucía. Consejería de Agricultura y Pesca},
   note = {Relevante:<br/><br/>Descripcion básica e la especie, puede alcanzar 30 cm de altura y 25 cm de diámetro. Suele tener entre 180 y 260 tentáculos largos y delgados, distribuidos en 5 o 6 círculos irregulares.<br/><br/>Especie común en el infralitoral, hasta 20 m de profundidad sobre susato rocoso. Prefiere ambientes bien iluminados y de hidrodinamismo moderado.<br/><br/>Alimentación variada: partoculas en suspension, plancton, pequeños moluscos, crustaceos y peces que sean depredados.<br/><br/>Reproduccion sexual y asexual, menciona ffision longitudinal a partir del polo basal, o gemación.<br/><br/>Conclusiones:<br/>A sulcata se distribuye por toda la franja litoral gaditana y malagueña, bien representada en todos los rangos de profundidad excepto en aquellas zonas del litoral gaditano donde esta sobreexplotada, principalmente la costa atlantica.<br/><br/>Ya preveen posible presion en sus poblaciones si no se controla la captura indiscriminada.<br/><br/>Estudio de su ciclo reproductivo:<br/><br/>No estiman necesario establecer vedas porque al tener reproduccion asexual se reproduce todo el año. Periodo de reproduccion sexual septiembre-abril.},
