   title = {Oxidative stress and apoptotic events during thermal stress in the symbiotic sea anemone, Anemonia viridis},
   volume = {273},
   url = {https://onlinelibrary.wiley.com/doi/full/10.1111/j.1742-4658.2006.05414.x https://onlinelibrary.wiley.com/doi/abs/10.1111/j.1742-4658.2006.05414.x https://febs.onlinelibrary.wiley.com/doi/10.1111/j.1742-4658.2006.05414.x},
